<script>
// Continuous Auto Scroll
const slider = document.getElementById('client-slider');
let scrollSpeed = 1; // pixels per frame

function continuousScroll() {
  slider.scrollLeft += scrollSpeed;

  // Loop back for infinite scroll
  if (slider.scrollLeft >= slider.scrollWidth / 2) { 
    slider.scrollLeft = 0;
  }

  requestAnimationFrame(continuousScroll);
}
continuousScroll();

// Hover animation for logos
const clientBoxes = slider.querySelectorAll('a');
clientBoxes.forEach(box => {
  box.addEventListener('mouseover', () => {
    box.style.transform = 'scale(1.1)';
    box.style.boxShadow = '0 12px 25px rgba(0,0,0,0.18)';
  });
  box.addEventListener('mouseout', () => {
    box.style.transform = 'scale(1)';
    box.style.boxShadow = '0 2px 8px rgba(0,0,0,0.08)';
  });
});
</script>






