<script>
  // Dropdown show/hide on hover
  const aboutDiv = document.querySelector("div[style*='display: inline-block']");
  const aboutDropdown = document.getElementById("aboutDropdown");

  aboutDiv.addEventListener("mouseover", () => {
    aboutDropdown.style.display = "block";
  });

  aboutDiv.addEventListener("mouseout", () => {
    aboutDropdown.style.display = "none";
  });
</script>
